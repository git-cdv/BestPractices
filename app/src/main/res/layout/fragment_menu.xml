<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MenuFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_simple_paging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/simple_paging" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dropdown_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dropdown_list"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mvi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mvi_example"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auth"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_tracking"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lottie_animation"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bipmap_with_stroke"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/storages"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_view"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_gestures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gestures"
        android:layout_marginHorizontal="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_optimaze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/optimize_image"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_coroutines_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coroutines_practice"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change text size"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End to end Encrypt"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLuepTranslator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luep Translator"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestLiveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BEST RECYCLERVIEW + DIFFUTILS"
        android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJwtAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jwt Auth"
            android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWebsockets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Websockets"
            android:layout_marginHorizontal="8dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stream with Exoplayer"
            android:layout_marginHorizontal="8dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>